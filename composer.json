{
    "name": "cadasto/openehr-assistant-mcp",
    "description": "A Model Context Protocol (MCP) Server to assist end-user on various openEHR related tasks and APIs.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Iancu",
            "email": "sebastian-iancu@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "guzzlehttp/guzzle": "^7.9",
        "mcp/sdk": "^0.3.0",
        "monolog/monolog": "^3.9",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0",
        "symfony/cache": "^7.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.3",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Cadasto\\OpenEHR\\MCP\\Assistant\\": "src/"
        },
        "files": [
            "src/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Cadasto\\OpenEHR\\MCP\\Assistant\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=off vendor/bin/phpunit --configuration tests/phpunit.xml --no-coverage --display-deprecations --display-notices --display-warnings",
        "test:dox": "@test --testdox",
        "test:coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-html var/phpunit/code-coverage --coverage-text=php://stdout",
        "check:phpstan": "XDEBUG_MODE=off vendor/bin/phpstan analyse --configuration tests/phpstan.neon --memory-limit 2G",
        "check:phpstan-baseline": "@phpstan --generate-baseline tests/phpstan-baseline.neon"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "php-http/discovery": true,
            "roave/security-advisories": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
